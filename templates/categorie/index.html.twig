{# simple interface to visualize categories #}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<h1>Categories</h1>
<div class="d-flex">
    <button type="button" class="btn btn-success m-2" onclick="window.location.href='/categories/create'">Ajouter une cat√©gorie</button>
    <button type="button" class="btn btn-primary m-2" onclick="window.location.href='/'">Home</button>
</div>
{% for categorie in categories %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ categorie.name }}</h5>
            <button type="button" class="btn btn-primary" onclick="window.location.href='/categories/{{ categorie.id }}/update'">Modifier</button>
            <button type="button" class="btn btn-danger" onclick="window.location.href='/categories/{{ categorie.id }}/delete'">Supprimer</button>
        </div>
    </div>
{% endfor %}

