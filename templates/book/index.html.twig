<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<h1>Books</h1>
<div class="d-flex">
    <button type="button" class="btn btn-success m-2" onclick="window.location.href='/books/create'">Ajouter un livre</button>
    <button type="button" class="btn btn-primary m-2" onclick="window.location.href='/'">Home</button>
</div>

{% for book in books %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ book.name }}</h5>
            {% for category in book.categories %}
                <p class="card-text">Autheur : <strong>{{ book.author.firstname }} {{ book.author.lastname }}</strong></p>
                <p class="card-text">categorie : <strong>{{ category.name }}</strong></p>
            {% endfor %}
            <button type="button" class="btn btn-primary" onclick="window.location.href='/books/{{ book.id }}/update'">Modifier</button>
            <button type="button" class="btn btn-danger" onclick="window.location.href='/books/{{ book.id }}/delete'">Supprimer</button>
        </div>
    </div>
{% endfor %}
