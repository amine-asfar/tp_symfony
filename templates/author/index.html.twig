<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Authors</h1>
            <div class="d-flex">
            <button type="button" class="btn btn-success m-2" onclick="window.location.href='/authors/create'">Ajouter un author</button>
                <button type="button" class="btn btn-primary m-2" onclick="window.location.href='/'">Home</button>
            </div>
            <ul class="card">
                {% for author in authors %}
                    <li class="m-4">
                        <h2>{{ author.firstname }} {{ author.lastname }}</h2>
                        <button type="button" class="btn btn-primary" onclick="window.location.href='/authors/{{ author.id }}/update'">Modifier</button>
                        <button type="button" class="btn btn-danger" onclick="window.location.href='/authors/{{ author.id }}/delete'">Supprimer</button>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>